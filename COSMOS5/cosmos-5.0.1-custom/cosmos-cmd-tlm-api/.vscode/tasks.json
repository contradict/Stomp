    "version": "2.0.0",
    "tasks": [
        {
            // sometimes this file gets left behind by the debugger and then it refuses to start again until it's deleted
            "label": "Delete server.pid",
            "type": "shell",
            "command": "del ${workspaceRoot}\\tmp\\pids\\server.pid"
        }
    ]
}